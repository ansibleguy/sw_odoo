#!/usr/bin/env bash

set -euo pipefail

BACKUP_DIR='{{ ODOO_CONFIG.backup.path }}'
RETENTION='{{ ODOO_CONFIG.backup.retention_days }}'
OUT_NAME="odoo_$(date '+%Y-%m-%d_%H-%M').sql.xz"

if [ -d "$BACKUP_DIR" ]
then
  mkdir -p "$BACKUP_DIR"
  chown root:odoo "$BACKUP_DIR"
  chmod 750 "$BACKUP_DIR"
fi

echo 'CREATING BACKUP'
sudo -u postgres pg_dumpall | xz > "${BACKUP_DIR}/${OUT_NAME}"
chmod 640 "${BACKUP_DIR}/${OUT_NAME}"
chown root:odoo "${BACKUP_DIR}/${OUT_NAME}"

echo 'DELETING OLD BACKUPS:'
find "$BACKUP_DIR" -name '*.sql.xz' -type f -mtime +"$RETENTION"
find "$BACKUP_DIR" -name '*.sql.xz' -type f -mtime +"$RETENTION" -delete

echo 'FINISHED'
